    "version": "0.2.0",
    "configurations": [
        {
            "name": "run hasher with sha256_raw algorithm",
            "type": "go",
            "request": "launch",
            "mode": "debug",
            "env": {
                "CGO_ENABLED": "0"
            },
            "args": [
                "-algorithm",
                "sha256_raw",
                "-input",
                "https://example.com/some/link?q1=1&q2=2&g=3"
            ],
            "program": "${workspaceFolder}/hasher"
        },
        {
            "name": "run hasher with double_md5_sorted algorithm",
            "type": "go",
            "request": "launch",
            "mode": "debug",
            "args": [
                "-algorithm",
                "double_md5_sorted",
                "-input",
                "https://example.com/some/link?q1=1&q2=2&g=3"
            ],
            "program": "${workspaceFolder}/hasher/main.go"
        }
    ]
}